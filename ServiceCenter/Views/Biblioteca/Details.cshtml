@model ServiceCenter.Models.Guia
@{
    ViewBag.Title = Model.Titulo;
}

<div class="faq-container">
    <h2 class="text-white mt-5 mb-3">@Model.Titulo</h2>
    <p class="text-secondary mb-4">
        Categoría: <strong>@(Model.Categoria?.Nombre ?? "Sin Categoría")</strong>
    </p>

    <div class="card bg-dark text-white mb-4">
        <div class="card-body">
            @Html.Raw(Model.Contenido.Replace("\r\n", "<br/>"))
        </div>
    </div>

    <div class="mb-4">
        @using (Html.BeginForm("Rate", "Biblioteca", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("id", Model.Id)
            @Html.Hidden("isUseful", "true")
            <button type="submit" class="btn btn-success me-2">
                <i class="fas fa-thumbs-up"></i> Útil (@Model.UsefulCount)
            </button>
        }
        @using (Html.BeginForm("Rate", "Biblioteca", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("id", Model.Id)
            @Html.Hidden("isUseful", "false")
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-thumbs-down"></i> No útil (@Model.NotUsefulCount)
            </button>
        }
    </div>

    <!-- Para descargar PDF -->
    <a href="@Url.Action("DescargarPDF", "Biblioteca", new { id = Model.Id })" class="btn btn-danger">Descargar PDF</a>

    <a href="@Url.Action("Index","Biblioteca")" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Volver a la lista
    </a>
</div>

@section Styles {
    <style>
    .card.bg-dark { background:rgba(0,0,0,0.6)!important; border:none; }
    .card.bg-dark .card-body { color:#fff; }
    .text-secondary { color:#ccc!important; }
    .btn-success,.btn-danger{ min-width:120px; }
    </style>
}