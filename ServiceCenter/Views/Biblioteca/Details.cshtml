@model ServiceCenter.Models.Guia
@{
    ViewBag.Title = Model.Titulo;
}

<div class="faq-container">

    <!-- Título de la guía -->
    <h2 class="text-white mt-5 mb-3">@Model.Titulo</h2>

    <!-- Categoría -->
    <p class="text-secondary mb-4">
        Categoría: <strong>@(Model.Categoria?.Nombre ?? "Sin Categoría")</strong>
    </p>

    <!-- Contenido completo de la guía -->
    <div class="card bg-dark text-white mb-4">
        <div class="card-body">
            @* Convertimos saltos de línea del campo Contenido en <br/> *@
            @Html.Raw(
                Model.Contenido
                     .Replace("\r\n", "<br/>")
                     .Replace("\n", "<br/>")
            )
        </div>
    </div>

    <!-- Botones para calificar como "Útil" o "No útil" -->
    <div class="mb-5">
        @using (Html.BeginForm("Rate", "Biblioteca", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("id", Model.Id)
            @Html.Hidden("isUseful", "true")
            <button type="submit" class="btn btn-success me-2">
                <i class="fas fa-thumbs-up"></i> Útil (@Model.UsefulCount)
            </button>
        }

        @using (Html.BeginForm("Rate", "Biblioteca", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("id", Model.Id)
            @Html.Hidden("isUseful", "false")
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-thumbs-down"></i> No útil (@Model.NotUsefulCount)
            </button>
        }
    </div>

    <!-- Enlace para regresar al listado -->
    <a href="@Url.Action("Index", "Biblioteca")" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Volver a la lista
    </a>

</div>

@section Styles {
    <style>
        /* -------------------------------------------------------------------
           La card de contenido se muestra semi-transparente sobre el fondo
        -------------------------------------------------------------------- */
        .card.bg-dark {
            background-color: rgba(0, 0, 0, 0.6) !important;
            border: none;
        }

            .card.bg-dark .card-body {
                color: #ffffff;
            }

        /* Ajuste de texto en categorías */
        .text-secondary {
            color: #cccccc !important;
        }

        /* Espaciado entre botones de calificación */
        .btn-success,
        .btn-danger {
            min-width: 120px;
        }
    </style>
}