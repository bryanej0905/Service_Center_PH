@model IEnumerable<ServiceCenter.Models.Guia>
@{
    ViewBag.Title = "Biblioteca Didáctica";
}

@section Styles {
    <style>
        .biblioteca-header {
            color: #fff;
            font-size: 2.3rem;
            font-weight: 700;
            margin: 0 0 0.7rem 0;
        }
        /* Espacio cómodo arriba */
        .biblioteca-topbar {
            margin-top: 2.2rem;
            margin-bottom: 2.2rem;
            display: flex;
            flex-direction: row;
            align-items: center;
            gap: 1.2rem;
            width: 100%;
        }

        .buscador-biblioteca {
            max-width: 340px;
            width: 100%;
        }

        .guides-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 2rem;
            justify-content: flex-start;
            width: 100%;
        }

        .guide-card {
            background: #222;
            color: #fff;
            border-radius: 18px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.15);
            padding: 1.3rem 1.1rem 1.2rem 1.3rem;
            display: flex;
            flex-direction: column;
            width: 315px;
            min-height: 250px;
            max-width: 95vw;
            justify-content: space-between;
            margin-bottom: 1.3rem;
        }

        .guide-title {
            font-size: 1.13rem;
            font-weight: 700;
            margin-bottom: 0.2rem;
        }

        .guide-category {
            font-size: 0.96rem;
            color: #d1d1d1;
            margin-bottom: 0.5rem;
            font-weight: 500;
        }

        .guide-summary {
            font-size: 1.01rem;
            margin-bottom: 1.25rem;
            flex-grow: 1;
        }

        .guide-card .btn {
            min-width: 120px;
            margin-bottom: 0.4rem;
        }

            .guide-card .btn + .btn {
                margin-left: 0.5rem;
            }

        @@media (max-width: 1100px) {
            .guides-grid {
                gap: 1.2rem;
                justify-content: center;
            }

            .guide-card {
                width: 95vw;
                max-width: 400px;
            }
        }

        @@media (max-width: 767px) {
            .biblioteca-topbar {
                flex-direction: column;
                align-items: flex-start;
                gap: 0.7rem;
            }

            .guides-grid {
                flex-direction: column;
                gap: 1.2rem;
                align-items: center;
            }

            .guide-card {
                width: 97vw;
                max-width: 99vw;
                padding: 1rem 0.5rem;
            }
        }
    </style>
}

<div class="biblioteca-topbar">
    <h1 class="biblioteca-header">Todas las Guías</h1>
    <form class="input-group buscador-biblioteca" method="get" action="@Url.Action("Index", "Biblioteca")">
        <input type="text" name="searchString" class="form-control" placeholder="Buscar por palabra clave..." value="@(ViewBag.CurrentFilter ?? "")" />
        <button class="btn btn-primary" type="submit"><i class="fas fa-search"></i> Buscar</button>
    </form>
</div>

<div class="guides-grid">
    @foreach (var item in Model)
    {
        var resumen = (item.Contenido ?? "");
        resumen = resumen.Length > 120 ? resumen.Substring(0, 120) + "…" : resumen;
        <div class="guide-card">
            <div>
                <div class="guide-title">@item.Titulo</div>
                <div class="guide-category">
                    <b>Temática:</b> @(item.Categoria?.Nombre ?? "Sin Categoría")
                </div>
                <div class="guide-summary">@Html.Raw(resumen.Replace("\r\n", "<br/>"))</div>
            </div>
            <div>
                <a href="@Url.Action("Details", "Biblioteca", new { id = item.Id })" class="btn btn-danger btn-sm">Ver Detalles</a>
                <a href="@Url.Action("DescargarPDF", "Biblioteca", new { id = item.Id })" class="btn btn-outline-light btn-sm">Descargar PDF</a>
            </div>
        </div>
    }
</div>