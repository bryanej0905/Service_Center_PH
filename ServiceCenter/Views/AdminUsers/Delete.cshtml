@model ServiceCenter.ViewModels.UserListViewModel
@{
    ViewBag.Title = "Eliminar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="p-4">
    <div class="card bg-dark text-white border-danger">
        <div class="card-header bg-danger">
            <h3>Eliminar Usuario</h3>
        </div>
        <div class="card-body">
            <p>¿Seguro que quieres eliminar al usuario <strong>@Model.UserName</strong>?</p>
            @using (Html.BeginForm("Delete", "AdminUsers", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)
                <button type="submit" class="btn btn-danger">Eliminar</button>
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary ms-2" })
            }
        </div>
    </div>
</div>
