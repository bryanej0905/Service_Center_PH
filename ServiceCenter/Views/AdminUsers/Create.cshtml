@model ServiceCenter.ViewModels.UserCreateViewModel

@{
    ViewBag.Title = "Crear Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0"><i class="fas fa-user-plus me-2"></i>Crear Usuario</h4>
            </div>
            <div class="card-body bg-dark text-white">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-floating mb-3">
                        @Html.TextBoxFor(m => m.Nombre,
                            new { @class = "form-control bg-secondary text-white", placeholder = "Nombre completo", required = "required" })
                        <label>Nombre completo</label>
                        @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger small" })
                    </div>

                    <div class="form-floating mb-3">
                        @Html.TextBoxFor(m => m.UserName,
                            new { @class = "form-control bg-secondary text-white", placeholder = "Usuario", required = "required" })
                        <label>Usuario</label>
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger small" })
                    </div>

                    <div class="form-floating mb-3">
                        @Html.TextBoxFor(m => m.Email,
                            new { @class = "form-control bg-secondary text-white", placeholder = "Correo electrónico", type = "email", required = "required" })
                        <label>Correo electrónico</label>
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                    </div>

                    <div class="form-floating mb-4">
                        @Html.PasswordFor(m => m.Password,
                            new { @class = "form-control bg-secondary text-white", placeholder = "Contraseña", required = "required" })
                        <label>Contraseña</label>
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
                    </div>

                    <label class="form-label">Asignar roles</label>
                    <div class="d-flex flex-wrap mb-4">
                        @foreach (var role in ViewBag.AllRoles as IEnumerable<SelectListItem>)
                        {
                            <div class="form-check me-3 mb-2">
                                <input class="form-check-input"
                                       type="checkbox"
                                       name="SelectedRoles"
                                       value="@role.Value"
                                       id="role_@role.Value" />
                                <label class="form-check-label text-white" for="role_@role.Value">
                                    @role.Text
                                </label>
                            </div>
                        }
                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-success me-2">
                            <i class="fas fa-check me-1"></i> Crear
                        </button>
                        @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-outline-light" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
