@model ServiceCenter.ViewModels.UserEditViewModel
@{
    ViewBag.Title = "Detalles de Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="p-4">
    <div class="card bg-dark text-white mb-4">
        <div class="card-header">
            <h3>Detalles de Usuario</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Usuario</dt>
                <dd class="col-sm-9">@Model.UserName</dd>
                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>
                <dt class="col-sm-3">Roles</dt>
                <dd class="col-sm-9">@string.Join(", ", Model.SelectedRoles)</dd>
            </dl>
            <div class="mt-3">
                @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning me-2" })
                @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
</div>
