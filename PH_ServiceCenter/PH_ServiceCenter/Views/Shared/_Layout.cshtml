<!DOCTYPE html>
<html lang="es" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PH_ServiceCenter</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site-faq.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="container">
        <!-- Navbar superior -->
        <nav class="navbar">
            <div class="navbar-left">
                <button id="sidebarToggle" class="btn-toggle">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="logo-container">
                    <img src="~/lib/img/pizza-hut-logo.png" alt="Pizza Hut Logo" class="logo">
                </div>
            </div>
            <div class="navbar-right">
                <button id="themeToggle" class="btn-theme">
                    <i class="fas fa-moon"></i>
                </button>
                <div class="user-profile">
                    <span class="username">Admin</span>
                    <i class="fas fa-user-circle"></i>
                </div>
            </div>
        </nav>
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <h3>Movimiento de Activos</h3>
            </div>
            <ul class="sidebar-menu">
                <li class="menu-title">Carta de Asignación de Fondo</li>
                <li class="menu-item active">
                    <a href="#">
                        <i class="fas fa-calculator"></i>
                        <span>Arqueo de Fondo de Menudo</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a href="#">
                        <i class="fas fa-cash-register"></i>
                        <span>Arqueo de Caja Registradora</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a href="#">
                        <i class="fas fa-utensils"></i>
                        <span>Administrar Restaurantes</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a href="#">
                        <i class="fas fa-bell"></i>
                        <span>Administrar Avisos</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a href="#">
                        <i class="fas fa-headset"></i>
                        <span>Service Desk</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a href="#">
                        <a href="@Url.Action("Index", "FAQ")" class="nav-link">
                            <i class="fas fa-question-circle"></i>
                            <span>FAQ</span>
                        </a>
                </li>
                <li class="menu-item">
                    <a href="@Url.Action("Index", "Biblioteca")" class="nav-link">
                        <i class="fas fa-book"></i>
                        <span>Biblioteca Didáctica</span>
                    </a>
                </li>
            </ul>
        </aside>

        <!-- Main Content -->
        <main role="main" class="flex-fill p-4">
            @RenderBody()
        </main>
    </div>
    </div>

    <footer class="border-top footer text-muted mt-3">
        <div class="container">
            &copy; 2025 - PH_ServiceCenter - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/script.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
