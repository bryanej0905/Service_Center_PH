@{
    ViewBag.Title = "Historial de Consultas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-white">Historial de Consultas Frecuentes</h2>

<ul class="list-group">
    @for (int i = 1; i <= 5; i++)
    {
        <li class="list-group-item bg-dark text-white">
            <strong>¿Pregunta frecuente @i?</strong><br />
            Consultada el @DateTime.Now.AddDays(-i).ToShortDateString()
        </li>
    }
</ul>

<a href="@Url.Action("Index", "Faq")" class="btn btn-secondary mt-4">Volver a FAQ</a>
