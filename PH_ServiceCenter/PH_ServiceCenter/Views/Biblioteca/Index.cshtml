@model IEnumerable<PH_ServiceCenter.Controllers.ArticuloGuia>
@{
    ViewBag.Title = "Biblioteca Didáctica";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-white">Biblioteca Didáctica</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card bg-dark text-white">
                <div class="card-body">
                    <h5 class="card-title">@item.Titulo</h5>
                    <p class="card-text">@item.Descripcion</p>
                    <p><strong>Temática:</strong> @item.Tematica</p>
                    <a href="@Url.Action("Detalle", "Biblioteca", new { id = item.Id })" class="btn btn-danger">Ver Detalles</a>
                </div>
            </div>
        </div>
    }
</div>

@if (User.IsInRole("Administrador"))
{
    <a href="@Url.Action("Administrar", "Biblioteca")" class="btn btn-secondary mt-4">Ir a Administración</a>
}